---
import parisCayenneImage from "@/assets/images/paris-cayenne.png";
import coraImage from "@/assets/images/cora.png";
import r2bacImage from "@/assets/images/r2bac.png";
import ProjectCard from "@/components/ui/project-card.astro";
const projects = [
  {
    title: "Paris Cayenne",
    description: "Site vitrine pour un restaurant gastronomique",
    link: "https://paris-cayenne.vercel.app/",
    image: parisCayenneImage,
  },
  {
    title: "Cora",
    description: "Projet scolaire sur l'étude des oiseaux en Guyane",
    link: "https://github.com/Link34500/C.O.R.A",
    image: coraImage,
  },
  {
    title: "R2BAC",
    description: "Plateforme de cours pour les étudiants",
    link: "https://github.com/Link34500/R2BAC",
    image: r2bacImage,
  },
];
---

<section id="realisations">
  <h2 class="text-4xl font-semibold text-center mb-8">Réalisations</h2>
  <div class="flex flex-wrap justify-center gap-8 p-8">
    {
      projects.map((project) => (
        <ProjectCard
          title={project.title}
          description={project.description}
          link={project.link}
          image={project.image}
        />
      ))
    }
  </div>
</section>
